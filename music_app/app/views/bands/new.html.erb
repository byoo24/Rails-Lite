<div class="content">

    <h1>Create a New Band</h1>

    <form action="<%= bands_url %>" method="POST">
        <%= auth_token %>

        <label for="band_name">Band Name</label>
        <input type="string"
               id="band_name"
               name="band[name]"
               value="<%= @band.name %>">

        <input type="submit" value="Rock N'Roll!">

    </form>

</div>