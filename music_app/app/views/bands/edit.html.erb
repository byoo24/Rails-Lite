<div class="content">

    <h1>Edit @band.name</h1>

    <form action="<%= band_url(@band) %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <%= auth_token %>

        <label for="band_name">Band Name</label>
        <input type="string"
               id="band_name"
               name="band[name]"
               value="<%= @band.name %>">

        <input type="submit" value="Make Dat Change!">

    </form>

</div>